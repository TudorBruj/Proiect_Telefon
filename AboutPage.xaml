<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
 xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
 x:Class="Proiect_Telefon.AboutPage"
 Title="Retail-Go">
    <VerticalStackLayout Spacing="10" Margin="10">
        <HorizontalStackLayout Spacing="10">
            <Image Source="cos_cumparaturi.png"
 SemanticProperties.Description="Produse si Magazine"
HeightRequest="35" />
            <Label FontSize="22" FontAttributes="Bold" Text="Cos si Management Produse" VerticalOptions="End" />
            <Label FontSize="22"  VerticalOptions="End" />
        </HorizontalStackLayout>
        <Label Text="Aplicatia aceasta te va lasa sa iti adaugi produse in cos si sa iti faci o lista cu produsele preferate! " />
        
        
        <Frame CornerRadius="100" Padding="0" BackgroundColor="White" HasShadow="True"
               HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand">
            <Image Source="retail.png" HeightRequest="200" WidthRequest="200" Aspect="AspectFill" />
        </Frame>
    </VerticalStackLayout>
</ContentPage>